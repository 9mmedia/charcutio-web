<h1><%= @meat.name %></h1>


<%= form_for @meat do |f| %>
  Name: <%= f.text_field :name, value: @meat.name %><br />
  Recipe: <%= f.collection_select :recipe_id, Recipe.all, :id, :name, prompt: true %><br />
  Box: <%= f.collection_select :box_id, Box.all, :id, :name, prompt: true, include_blank: true %><br />
  <% if @meat.start_date %>
    Cancel meat: <%= f.check_box :cancel, value: false %>
  <% else %>
    Start today: <%= f.check_box :start, value: false %>
  <% end %>
  <br />
  <br />
  <%= f.submit 'Save' %>
<% end %>
