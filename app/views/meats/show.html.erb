<h1><%= @meat.name %></h1>


<%= form_for @meat do |f| %>
  Name: <%= f.text_field :name, value: @meat.name %><br />
  Recipe: <%= f.collection_select :recipe_id, Recipe.all, :id, :name, prompt: true %><br />
  Box: <%= f.collection_select :box_id, Box.all, :id, :name, prompt: true %><br />
  <%= "Start today: " unless @meat.start_date %><%= f.check_box :start, value: false unless @meat.start_date %>
  <br />
  <br />
  <%= f.submit 'Save' %>
<% end %>
